server {
    server_name {{ security_tool_domain_names | join(' ') }};

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:5013;
    }

    listen [::]:443;
    listen 443;
    ssl_certificate /etc/letsencrypt/certs/{{ cert_cn }}-fullchain.crt;
    ssl_certificate_key /etc/letsencrypt/keys/{{ cert_cn }}.key;
}
server {
    server_name {{ security_tool_domain_names | join(' ') }};

    location /.well-known/ {
        default_type "text/plain";
        root         /var/www/html;
    }
    location = /.well-known/ {
        return 404;
    }

    location / {
      return 301 https://$host$request_uri;
    }

    listen 80;
    listen [::]:80;
}